@model ControloDespesas.Models.Salarios

@{
    ViewData["Title"] = "Adicionar Novo Salário";
}

<hr />
<h4>Salarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mesid" class="control-label">Mês</label>
                <select asp-for="Mesid" class ="form-control" asp-items="ViewBag.Mesid"></select>
            </div>
            <div class="form-group">
                <label asp-for="valor" class="control-label">Valor</label>
                <input asp-for="valor" class="form-control" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Novo" class="btn btn-default"  />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
